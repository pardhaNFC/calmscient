<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_border"
    android:orientation="horizontal"
    tools:context=".activities.PrivacyBottomSheet">

    <androidx.cardview.widget.CardView
        android:id="@+id/privacyCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@drawable/dialog_border"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_20sdp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_privacyItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView"
                android:padding="@dimen/_8sdp"
                android:fontFamily="@font/lexendregular"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"/>

            <com.github.angads25.toggle.widget.LabeledSwitch
                android:id="@+id/privacyToggleButtonItem"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:gravity="end|top" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
