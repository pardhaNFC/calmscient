<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollCardsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scenario1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/purple_100"
                android:text="@string/scenario_2"
                android:gravity="center"
                android:fontFamily="@font/lexendsemibold"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/scenario_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/scenario_2"
                app:layout_constraintTop_toBottomOf="@+id/scenario1_tv"/>

            <TextView
                android:id="@+id/tv_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/lexendsemibold"
                android:text="@string/i_might_think_biased_thinking"
                android:textAllCaps="false"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/scenario_image"/>
            <LinearLayout
                android:id="@+id/optionsLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_question1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/option_1_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_4sdp"
                        android:fontFamily="@font/lexendlight"
                        android:gravity="left|center"
                        android:text="@string/it_was_a_bad_idea_to_come_to_this_party"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/option_1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:fontFamily="@font/lexendlight"
                        android:buttonTint="@color/purple_100"
                        android:text="@string/i_ve_been_rejected_i_might_have_done_or_said_something_bad"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/option_1_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:fontFamily="@font/lexendlight"
                        android:buttonTint="@color/purple_100"
                        android:text="@string/i_m_boring_and_no_one_wants_to_talk_to_me"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/option_1_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:fontFamily="@font/lexendlight"
                        android:buttonTint="@color/purple_100"
                        android:text="@string/they_didn_t_really_come_talk_to_me_they_didn_t_want"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>