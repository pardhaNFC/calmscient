<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_50sdp"
    android:orientation="vertical"
    tools:context=".fragments.StressHormonesFragment">

    <LinearLayout
        android:id="@+id/changing_your_response_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_manageanxietyicon" />

            <TextView
                android:id="@+id/tv_title_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/ic_glossary"
                android:layout_toEndOf="@id/backIcon"
                android:ellipsize="end"
                android:fontFamily="@font/lexendmedium"
                android:gravity="center"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#424242"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/ic_glossary"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_filesiconanxiety" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/viewbackgroundcolor" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Screen 1  -->
                <LinearLayout
                    android:id="@+id/screen_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_stress_hormones_desc_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexendlight"
                        android:text="@string/stress_hormones_card_1_desc_1"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:contentDescription="Center Image"
                        android:src="@drawable/stress_hormones_1"/>


                    <TextView
                        android:id="@+id/tv_emotional_signs_of_stress_desc_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexendlight"
                        android:text="@string/stress_hormones_card_1_desc_2"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView" />

                    <ImageView
                        android:id="@+id/nextQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_240sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:clickable="true"
                        android:src="@drawable/ic_next_question" />

                </LinearLayout>
                <!-- Screen 2  -->
                <LinearLayout
                    android:id="@+id/screen_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/screenTwoImageViewOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Center Image"
                        android:src="@drawable/stress_hormones_2_1"/>

                    <TextView
                        android:id="@+id/tv_stress_hormones_screen_2_desc_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexendlight"
                        android:text="@string/stress_hormones_card_2_desc_1"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView" />
                    <ImageView
                        android:id="@+id/screenTwoImageViewTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:contentDescription="Center Image"
                        android:src="@drawable/stress_hormones_2_2"/>


                    <TextView
                        android:id="@+id/tv_stress_hormones_screen_2_desc_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexendlight"
                        android:text="@string/stress_hormones_card_2_desc_2"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView" />

                    <ImageView
                        android:id="@+id/previousQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:clickable="true"
                        android:src="@drawable/ic_question_back" />


                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>