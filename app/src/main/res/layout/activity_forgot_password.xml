<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       tools:ignore="MissingConstraints">

       <ImageView
           android:id="@+id/imgBack"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_10sdp"
           android:src="@drawable/ic_back" />

       <ImageView
           android:id="@+id/img_calm"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/_40sdp"
           android:layout_marginEnd="@dimen/_40sdp"
           android:layout_marginTop="@dimen/_40sdp"
           android:src="@drawable/clamscient_txt_splash" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/forgot_password_screen_text"
           android:layout_marginTop="@dimen/_16sdp"
           android:layout_marginHorizontal="@dimen/_14sdp"
           android:textColor="@color/black_head"
           android:fontFamily="@font/lexendmedium"
           android:textSize="@dimen/_16sdp"/>

       <TextView
           android:id="@+id/custom_textBox_1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:fontFamily="@font/lexendlight"
           android:gravity="center_vertical"
           android:layout_marginTop="@dimen/_16sdp"
           android:layout_marginHorizontal="@dimen/_14sdp"
           android:text="@string/please_enter_your_email_to_reset_the_password"
           android:textColor="@color/black_head"
           android:textSize="@dimen/_12sdp" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/userNameTextInputLayout"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_20sdp"
           android:paddingTop="1dp"
           app:boxBackgroundColor="#ffffff"
           app:boxStrokeColor="@color/example_7_button"
           app:endIconMode="clear_text"
           app:hintTextColor="@color/black">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/emailOrPhoneNumber"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/your_email_phone_number"
               android:padding="@dimen/_11sdp"
               android:inputType="textPersonName" />

       </com.google.android.material.textfield.TextInputLayout>

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btn_reset_password"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_30sdp"
           android:layout_marginBottom="8dp"
           android:background="@drawable/button_border"
           android:fontFamily="@font/lexendmedium"
           android:gravity="center"
           android:text="@string/reset_password"
           android:textAllCaps="false"
           android:textColor="@color/white"
           android:textSize="20sp" />

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>