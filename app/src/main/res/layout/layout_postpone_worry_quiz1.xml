        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/duration"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/lexendmedium"
                android:textColor="@color/black_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_five"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/five"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_ten"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/ten_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_fifteen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/fifteen"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_twenty"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_2sdp"
