                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/step2_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexendmedium"
                    android:gravity="right|end"
                    android:text="2"
                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/step3_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexendmedium"
                    android:gravity="right|end"
                    android:text="3"
                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/step4_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexendmedium"
                    android:gravity="right|end"
                    android:text="4"
                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/step5_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexendmedium"
                    android:gravity="right|end"
                    android:text="5"
                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <!-- SeekBar -->
            <SeekBar
                android:id="@+id/progressBar_7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_below="@+id/textViewQuestionThree"
                android:layout_marginTop="@dimen/_8sdp"
                android:max="5"
                android:progress="1"
                android:progressDrawable="@drawable/curved_progress_bar"
