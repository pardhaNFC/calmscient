            android:clipToPadding="false"
            android:dividerHeight="0.0px">

            <EditText
                android:id="@+id/et_journalEntry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewQuestionThree"
